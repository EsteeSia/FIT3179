{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/EsteeSia/FIT3179/main/death_maternal_state.csv"
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2021,
      "bind": {
        "input": "select",
        "options": [2000, 2001, 2002, 2003, 2004, 2005, 2006, 2007, 2008, 2009, 2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2020, 2021, 2022],
        "labels": ["2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022"],
        "name": "Select Year"
      }
    }
  ],
  "transform": [
    { "filter": "year(datum.date) == selectedYear" },
    {
      "window": [
        {"op": "rank", "as": "rank"},
        {"op": "dense_rank", "as": "dense_rank"},
        {"op": "row_number", "as": "row_number"}
      ],
      "sort": [
        {"field": "rate", "order": "descending"},
        {"field": "state", "order": "ascending"}
      ]
    },
    {
      "filter": "datum.row_number <= 16 || datum.state == 'W.P. Putrajaya'"
    },
    {
      "window": [{"op": "row_number", "as": "final_row_number"}],
      "sort": [
        {"field": "rate", "order": "descending"},
        {"field": "state", "order": "ascending"}
      ]
    },
    {
      "calculate": "floor((datum.final_row_number - 1) / 4)", 
      "as": "row"
    },
    {
      "calculate": "(datum.final_row_number - 1) % 4", 
      "as": "column"
    }
  ],
  "mark": {
    "type": "rect",
    "stroke": "black",
    "strokeWidth": 1
  },
  "encoding": {
    "x": {
      "field": "column",
      "type": "ordinal",
      "scale": {"domain": [0, 1, 2, 3]},
      "axis": null
    },
    "y": {
      "field": "row",
      "type": "ordinal",
      "scale": {"domain": [0, 1, 2, 3]},
      "axis": null
    },
    "color": {
      "field": "rate",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [0, 20, 40, 60, 80, 100, 120],
        "range": ["#fff0f5", "#ffe4e8", "#ffd9dd", "#ffcdd2", "#ffc2c7", "#ffb6bc", "#ffabb1", "#ff1493"]
      },
      "legend": {
        "title": "Maternal Mortality Rate (per 100k births)",
        "orient": "bottom",
        "format": "d",
        "labelColor": "black",
        "labelFontSize": 12
      }
    },
    "tooltip": [
      { "field": "state", "type": "nominal", "title": "State" },
      { "field": "rate", "type": "quantitative", "title": "Rate", "format": ".2f" }
    ]
  },
  "config": {
    "view": { "stroke": "transparent" }
  },
  "layer": [
    { "mark": "rect" },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle"
      },
      "encoding": {
        "text": { "field": "state", "type": "nominal" },
        "color": {
          "condition": {
            "test": "datum.rate > 120",
            "value": "white"
          },
          "value": "black"
        }
      }
    }
  ]
}
